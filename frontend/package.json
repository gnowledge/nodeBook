{
  "name": "ndf-frontend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:all": "npm run test && npm run test:e2e",
    "test:ci": "npm run test:coverage && npm run test:e2e -- --reporter=html",
    "type-check": "tsc --noEmit",
    "lint:fix": "eslint . --ext js,jsx --fix",
    "android:build": "npm run build && npx cap sync",
    "android:open": "npx cap open android",
    "android:run": "npx cap run android",
    "android:build-apk": "cd android && ./gradlew assembleDebug",
    "android:build-release": "cd android && ./gradlew assembleRelease",
    "android:sync": "npx cap sync",
    "android:init": "npx cap init NodeBook com.nodebook.app --web-dir=dist",
    "ios:build": "npm run build && npx cap sync ios",
    "ios:open": "npx cap open ios",
    "ios:run": "npx cap run ios",
    "ios:sync": "npx cap sync ios",
    "ios:add": "npx cap add ios"
  },
  "dependencies": {
    "@capacitor/android": "^5.0.0",
    "@capacitor/core": "^5.0.0",
    "@capacitor/splash-screen": "^5.0.0",
    "@capacitor/status-bar": "^5.0.0",
    "@monaco-editor/react": "^4.6.0",
    "blockly": "^12.1.0",
    "cytoscape": "^3.28.1",
    "cytoscape-compound-drag-and-drop": "^1.1.0",
    "cytoscape-dagre": "^2.5.0",
    "js-yaml": "^4.1.0",
    "marked": "^9.1.6",
    "react": "^18.2.0",
    "react-cytoscapejs": "^2.0.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "react-monaco-editor": "^0.58.0",
    "react-router-dom": "^6.20.1",
    "react-simplemde-editor": "^5.2.0",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@capacitor/cli": "^5.0.0",
    "@eslint/js": "^8.55.0",
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jsdom": "^21.1.6",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/ui": "^1.0.4",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "globals": "^13.24.0",
    "jsdom": "^23.0.1",
    "terser": "^5.43.1",
    "typescript": "^5.2.2",
    "unocss": "^0.58.5",
    "vite": "^5.0.8",
    "vitest": "^1.0.4"
  }
}
