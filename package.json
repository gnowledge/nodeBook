{
  "name": "nodebook",
  "version": "1.0.0",
  "description": "A federated, cross-platform knowledge graph application supporting both centralized server deployments and decentralized desktop use",
  "main": "index.js",
  "scripts": {
    "build:frontend": "cd nodebook-base/frontend && npm run build",
    "build:docker": "docker build -t nodebook:latest .",
    "build:all": "npm run build:frontend && npm run build:docker",
    "dev:frontend": "cd nodebook-base/frontend && npm run dev",
    "dev:backend": "cd nodebook-base && npm run dev",
    "start:backend": "cd nodebook-base && npm start",
    "test": "cd nodebook-base && npm test",
    "clean": "rm -rf nodebook-base/frontend/dist",
    "install:all": "npm install && cd nodebook-base && npm install && cd frontend && npm install",
    "dev:docker": "./scripts/dev-start.sh",
    "dev:docker:clean": "./scripts/dev-start.sh --clean",
    "test:api": "./scripts/test-api.sh",
    "dev:logs": "docker compose -f docker-compose.dev.yml logs -f",
    "dev:stop": "docker compose -f docker-compose.dev.yml down",
    "dev:restart": "docker compose -f docker-compose.dev.yml restart"
  },
  "keywords": [
    "knowledge-graph",
    "p2p",
    "federated",
    "electron",
    "docker"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.8",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.1.7"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "axios": "^1.11.0",
    "marked": "^15.0.12",
    "react-markdown": "^10.1.0"
  }
}
