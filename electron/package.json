{
  "name": "nodebook-electron",
  "version": "1.0.0",
  "description": "NodeBook Desktop Application",
  "main": "main.js",
  "homepage": "https://docs.nodebook.in",
  "author": {
    "name": "Nagarjun",
    "email": "nagarjun@gnowledge.org"
  },
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "build": "npm run dist"
  },
  "dependencies": {},
  "devDependencies": {
    "electron": "^28.2.3",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.nodebook.app",
    "productName": "NodeBook",
    "files": [
      "main.js",
      "preload.js",
      {
        "from": "../nodebook-base",
        "to": "nodebook-base"
      }
    ],
    "directories": {
      "output": "dist"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "maintainer": "nagarjun@gnowledge.org"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    }
  }
}